


<body>
    
    <div class="container-fluid">
    <div class="row">
        <div class="col-sm-auto bg-dark sticky-top">
            <div class="d-flex flex-sm-column flex-row flex-nowrap bg-dark align-items-center sticky-top">
            {% for currentUser in currentUsers %}
                <a class="d-block p-3 link-light text-decoration-none" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Icon-only">
                {% if currentUser.class == 1 %} 
                    <i class="bi bi-incognito fs-1"></i>
                    {% else %} 
                     <i class="bi bi-person-circle fs-1"></i>
                {% endif %} 
                </a>
                <ul class="nav nav-pills nav-flush flex-sm-column flex-row flex-nowrap mb-auto mx-auto text-center justify-content-between w-100 px-3 align-items-center">
                    <li class="nav-item">
                         <a  onclick="show(1)" class="link-primary py-3 px-2" title="" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i class="bi bi-house fs-1 "></i>
                        </a>
                    </li>
                    <li>
                        <a  onclick="show(2)" class="link-primary py-3 px-2" title="" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i class="bi bi-envelope fs-1"></i>
                        </a>
                    </li>
                    <li>
                        <a  onclick="show(3)" class="link-primary py-3 px-2" title="" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i class="bi bi-newspaper fs-1 "></i>
                        </a>
                    </li>
                    <li>
                        <a  onclick="show(4)" class="link-primary py-3 px-2" title="" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i class="bi bi-gear fs-1"></i>
                        </a>
                    </li>
                    {% if currentUser.class == 1 %}
                    <li>              
                        <a  onclick="show(5)" class="link-primary py-3 px-2" title="" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i class="bi bi-people fs-1"></i>
                        </a>
                    </li>
                    {% endif %}
                    {% endfor %}   
                    <li>
                        <a href="/logout" method="GET" name="logoutFunction" type="submit" class="link-secondary py-3 px-2" title="" data-bs-toggle="tooltip" data-bs-placement="right">
                            <i class="bi bi-box-arrow-left fs-1"></i>
                        </a>
                    </li>                    
                </ul>
        
            </div>
        </div>
            <div class="col-sm p-3 min-vh-100">
                    <!-- -informacija -->

                <div class="content" id="content1">
                {% block homePage %}
                {% include 'homePage.twig' %}
                {% endblock %}
                </div>         

                <div class="content hidden" id="content2">
                {% block tableDemand %}
                {% include 'tableDemand.twig' %}
                {% endblock %}
                </div>

                <div class="content hidden" id="content3">
                {% block vehicleHistory %}
                {% include 'vehicleHistory.twig' %}
                {% endblock %}
                </div>                          

                <div class="content hidden" id="content4">
                {% block options %}
                {% include 'options.twig' %}
                {% endblock %}
                </div>    

                <div class="content hidden" id="content5">
                {% block userManager %}
                {% include 'userManager.twig' %}
                {% endblock %}
                </div>     
                                                                     
                
            </div>
        </div>
    </div>
</div>   
    

<script>                    
function show(id) {
    var allDivs = document.getElementsByClassName('content');
    for (var i = 0; i < allDivs.length; i++){
        allDivs[i].classList.add('hidden');
    }
    document.getElementById('content' + id).classList.remove('hidden');
}
</script>
